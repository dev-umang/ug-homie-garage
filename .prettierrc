{
  "trailingComma": "all",
  "printWidth": 80,
  "tabWidth": 2,
  "singleQuote": false,
  "importOrder": [
    "react-dom(.*)",
    "react(.*)",
    "firebase/(.*)",
    "dayjs",
    "jotai",
    "^@app/(.*)$",
    "^@common/store(.*)$",
    "^@common/(.*)$",
    "^@configs/(.*)$",
    "^@components/(.*)$",
    "^@layouts/(.*)$",
    "^@modules/(.*)$",
    "^@(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
